@{
    Layout = null;
    ViewData["Title"] = "Solicitar Recuperación de Contraseña";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #a8e6cf 0%, #dcedc1 99%, #dcedc1 100%);
        }

        .recovery-box {
            background: rgba(255, 255, 255, 0.9);
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            width: 360px;
            text-align: center;
            position: relative;
        }

        .icon-container {
            position: absolute;
            top: -60px;
            left: 50%;
            transform: translateX(-50%);
            background: #1a4a5a;
            border-radius: 50%;
            padding: 10px;
            width: 80px;
            height: 80px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

            .icon-container i {
                font-size: 40px;
                color: #fff;
            }

        .recovery-box h2 {
            margin-top: 20px;
            margin-bottom: 20px;
            color: #1a4a5a;
            font-size: 24px;
        }

        .form-group label {
            color: #1a4a5a;
            font-weight: bold;
        }

        .form-control {
            background: #f1f1f1;
            border: none;
            border-radius: 8px;
            padding: 15px;
            font-size: 16px;
            color: #1a4a5a;
        }

        .btn-primary {
            width: 100%;
            padding: 15px;
            border: none;
            border-radius: 8px;
            background: #1a4a5a;
            color: #fff;
            font-size: 18px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

            .btn-primary:hover {
                background: #055e05;
            }

        .back-link {
            margin-top: 20px;
            font-size: 14px;
            color: #666;
        }

            .back-link a {
                color: #1a4a5a;
                text-decoration: none;
                font-weight: bold;
            }

                .back-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="recovery-box">
        <div class="icon-container">
            <i class="fas fa-envelope"></i>
        </div>
        <h2>@ViewData["Title"]</h2>

        <form asp-action="EnviarRecuperacion" method="post">
            <div class="form-group">
                <label for="email">Correo Electrónico</label>
                <input type="email" id="email" name="email" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Enviar Enlace</button>
        </form>

        <div class="back-link">
            <a href="@Url.Action("IniciarSesion", "Inicio")">Volver a Iniciar Sesión</a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
