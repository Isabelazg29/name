<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Glamping Addventure</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            background: linear-gradient(135deg, #a5dfa4 0%, #d5ffd2 100%); /* Gradiente más suave */
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 80px;
            background-color: #76bf76; /* Color verde primario */
            color: #ffffff;
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 20px;
            transition: background-color 0.3s ease; /* Transición suave para cambios */
            position: relative;
        }

            .sidebar:hover {
                background-color: #8ecf8d; /* Cambio de color cuando se pasa el mouse */
            }

            .sidebar a {
                color: #ffffff;
                text-decoration: none;
                margin: 20px 0;
                font-size: 24px;
                display: flex;
                flex-direction: column;
                align-items: center;
                transition: color 0.3s ease;
                position: relative;
            }

            .sidebar a .icon-text {
                display: none; /* Ocultar el texto por defecto */
                position: absolute;
                left: 100%;
                top: 0;
                margin-left: 10px;
                white-space: nowrap;
                background-color: #333;
                color: white;
                padding: 5px;
                border-radius: 5px;
                opacity: 0;
                visibility: hidden;
                transition: opacity 0.3s ease, visibility 0s 0.3s; /* Transición de aparición */
            }

            .sidebar a:hover .icon-text {
                display: inline-block;
                opacity: 1;
                visibility: visible;
                transition: opacity 0.3s ease;
            }

            .sidebar a:hover {
                color: #c1e1a7; /* Color suave en hover */
            }

        .content {
            flex-grow: 1;
            padding: 20px;
            background: #ffffff;
            border-radius: 12px; /* Bordes redondeados */
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1); /* Sombra más sutil */
            margin: 20px;
            transition: box-shadow 0.3s ease; /* Transición para sombra */
        }

            .content:hover {
                box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.15); /* Sombra más prominente al pasar el mouse */
            }

        header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 20px;
            background-color: #ffffff;
            border-bottom: 2px solid #ddd;
            border-radius: 8px;
            margin-bottom: 20px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Sombra sutil */
        }

        .navbar-toggler-icon {
            color: #000;
        }

        .header-title {
            font-size: 24px;
            color: #333;
            font-weight: 700; /* Peso de fuente más fuerte */
        }

        .icon {
            font-size: 18px;
            color: #666;
            margin-right: 8px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <a href="@Url.Action("Index", "Home")">
            <i class="fas fa-home"></i>
            <span class="icon-text">Inicio</span> <!-- Texto que aparece al pasar el cursor -->
        </a>
        <a href="@Url.Action("Index", "Roles")">
            <i class="fas fa-user-shield"></i>
            <span class="icon-text">Roles</span>
        </a>
        <a href="@Url.Action("Index", "Usuarios")">
            <i class="fas fa-users"></i>
            <span class="icon-text">Usuarios</span>
        </a>
        <a href="@Url.Action("CerrarSesion", "Home")">
            <i class="fas fa-sign-out-alt"></i>
            <span class="icon-text">Cerrar Sesión</span>
        </a>
    </div>

    <div class="content">
        <header>
            <div class="header-title">@ViewData["Title"]</div>
            <div>
                <i class="fas fa-bell icon"></i>
                <i class="fas fa-user-circle icon"></i>
            </div>
        </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
</body>
</html>
